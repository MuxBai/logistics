<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhtang.miaosha.mapper.OrdersMapper">
    <resultMap id = "OrdersMapper" type="com.zhtang.miaosha.pojo.Orders">
        <id column="id" property="id"/>
        <result column="product_id" property="productId"/>
        <result column="amount" property="amount"/>
    </resultMap>

    <!-- 查询 -->
    <select id="getOrderById" resultMap="OrdersMapper" parameterType="long">
        SELECT * FROM orders WHERE id = #{id}
    </select>

    <!-- 插入 -->
    <insert id="insertOrder" parameterType="com.zhtang.miaosha.pojo.Orders" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO orders(id, product_id, amount) VALUES(#{id}, #{productId}, #{amount})
    </insert>

    <!-- 更新 -->
    <update id="updateOrderAmount" parameterType="com.zhtang.miaosha.pojo.Orders">
        UPDATE orders SET amount = #{amount} WHERE id = #{id}
    </update>

    <!-- 删除 -->
    <delete id="deleteOrderById" parameterType="java.lang.Long">
        DELETE FROM orders WHERE id = #{id}
    </delete>

    <!-- 查询商品库存 -->
    <select id="getStockByProductId" resultType="int" parameterType="java.lang.Long">
        SELECT stock FROM product WHERE id = #{productId}
    </select>

    <!-- 扣减库存 -->
    <update id="deductStock" parameterType="java.lang.Long">
        UPDATE product SET stock = stock - 1 WHERE id = #{productId} AND stock > 0
    </update>

</mapper>