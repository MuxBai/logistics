<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhtang.miaosha.mapper.ProductMapper">
    <resultMap id="BaseResultMap" type="com.zhtang.miaosha.pojo.Product">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="price" property="price"/>
        <result column="stock" property="stock"/>
        <result column="pic" property="pic"/>
    </resultMap>

    <!-- 查询 -->
    <select id="getProductById" parameterType="long" resultMap="BaseResultMap">
        SELECT * FROM product WHERE id = #{id}
    </select>

    <!-- 新建 -->
    <insert id="insertProduct" parameterType="com.zhtang.miaosha.pojo.Product" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO product(name, price, stock, pic)
        VALUES (#{name}, #{price}, #{stock}, #{pic})
    </insert>

    <!-- 更新价格 -->
    <update id="updateProductPrice" parameterType="map">
        UPDATE product SET price = #{price} WHERE id = #{id}
    </update>

    <!-- 删除 -->
    <delete id="deleteProductById" parameterType="long">
        DELETE FROM product WHERE id = #{id}
    </delete>

</mapper>